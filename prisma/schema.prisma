// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User and Organization
model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  hashedPassword  String?
  image           String?
  avatarUrl       String?
  accounts        Account[]
  sessions        Session[]
  role            String    @default("USER") // Was enum Role
  themePreference String?   @default("SYSTEM") // Was enum ThemePreference

  // Organization relations
  ownedOrganizations Organization[]      @relation("OrganizationOwner")
  organizations      OrganizationMember[]
  createdIssues      Issue[]             @relation("Reporter")
  assignedIssues     Issue[]             @relation("Assignee")
  comments           Comment[]
  activityLogs       ActivityLog[]
  createdProjects    Project[]           @relation("ProjectLead")
  notifications      Notification[]
  sentInvitations    Invitation[]
  uploadedAttachments Attachment[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model Organization {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  ownerId   String
  owner     User      @relation("OrganizationOwner", fields: [ownerId], references: [id])
  members   OrganizationMember[]
  projects  Project[]
  plan      String    @default("FREE") // Was enum Plan
  invitations Invitation[]
  roles     Role[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}




// Project Management
model Project {
  id             String       @id @default(cuid())
  name           String
  key            String       @unique
  type           String       @default("KANBAN") // Was enum ProjectType
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  leadId         String
  lead           User         @relation("ProjectLead", fields: [leadId], references: [id])
  statuses       Status[]
  sprints        Sprint[]
  issues         Issue[]
  invitations    Invitation[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Status {
  id        String   @id @default(cuid())
  name      String
  category  String   @default("TODO") // Was enum StatusCategory
  order     Int
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues    Issue[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sprint {
  id        String   @id @default(cuid())
  name      String
  goal      String?
  status    String   @default("FUTURE") // Was enum SprintStatus
  startDate DateTime?
  endDate   DateTime?
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues    IssueSprint[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Issue {
  id              String  @id @default(cuid())
  key             String  @unique
  title           String
  description     String?
  order           Int     @default(0)
  estimatePoints  Int?
  estimatedHours  Float?
  startDate       DateTime?
  dueDate         DateTime?
  type            String  @default("TASK") // Was enum IssueType
  priority        String  @default("NONE") // Was enum Priority
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  statusId String
  status   Status @relation(fields: [statusId], references: [id])

  reporterId String
  reporter   User   @relation("Reporter", fields: [reporterId], references: [id])
  assigneeId String?
  assignee   User?  @relation("Assignee", fields: [assigneeId], references: [id])

  sprints   IssueSprint[]
  comments  Comment[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  activityLogs    ActivityLog[]
  customFieldValues String?

  // Hierarchy
  parentId        String?
  parent          Issue?   @relation("IssueHierarchy", fields: [parentId], references: [id])
  children        Issue[]  @relation("IssueHierarchy")

  attachments     Attachment[]
  checklist       ChecklistItem[]
}

model OrganizationMember {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  orgRole        String       @default("MEMBER") // Keeping for backwards compatibility/fallback
  
  roleId         String?
  role           Role?        @relation(fields: [roleId], references: [id])

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([organizationId, userId])
}

model IssueSprint {
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  sprintId  String
  sprint    Sprint   @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  addedAt   DateTime @default(now())

  @@id([issueId, sprintId])
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActivityLog {
  id        String   @id @default(cuid())
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  actorId   String
  actor     User     @relation(fields: [actorId], references: [id])
  type      String // e.g., STATUS_CHANGED, ASSIGNEE_CHANGED
  metadata  String? // Was Json
  createdAt DateTime   @default(now())
}



model CustomField {
  id              String   @id @default(cuid())
  name            String
  projectId       String
  type            String
  config          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  message   String?
  link      String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Invitation {
  id             String   @id @default(cuid())
  email          String
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  projectId      String?
  project        Project?      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  inviterId      String
  inviter        User          @relation(fields: [inviterId], references: [id])
  token          String   @unique
  status         String   @default("PENDING")
  role           String?
  createdAt      DateTime @default(now())
  expiresAt      DateTime

  @@unique([email, organizationId])
  @@unique([email, projectId])
}

model Role {
  id             String   @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  permissions    Permission[]
  members        OrganizationMember[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([organizationId, name])
}

model Permission {
  id     String @id @default(cuid())
  action String // e.g., "MANAGE_PROJECTS", "CREATE_ISSUES"
  roleId String
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, action])
}

model Attachment {
  id        String   @id @default(cuid())
  name      String
  url       String
  size      Int
  type      String
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  uploaderId String
  uploader  User     @relation(fields: [uploaderId], references: [id])
  createdAt DateTime @default(now())
}

model ChecklistItem {
  id        String   @id @default(cuid())
  title     String
  isChecked Boolean  @default(false)
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
